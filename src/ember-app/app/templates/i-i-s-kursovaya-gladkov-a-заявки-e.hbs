<h3 class="ui header">{{t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерЗаявки
      class=(if (v-get validationModel "номерЗаявки" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.номерЗаявки-caption")
      data-test-i-i-s-kursovaya-gladkov-a-заявки-e-номерЗаявки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерЗаявки" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.датаЗаявки-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаЗаявки
      class=(if (v-get validationModel "датаЗаявки" "isInvalid") "error")
      data-test-i-i-s-kursovaya-gladkov-a-заявки-e-датаЗаявки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаЗаявки" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="наименование"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-kursovaya-gladkov-a-заявки-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya-gladkov-a-заявки-e.тчЗаявка-caption"}}</label>
    {{flexberry-groupedit
      componentName="тчЗаявкаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тчЗаявка
      content=model.тчЗаявка
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тчЗаявка" "isInvalid") "error")
      data-test-i-i-s-kursovaya-gladkov-a-заявки-e-тчЗаявка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тчЗаявка" "message")}}
  </div>
</form>
